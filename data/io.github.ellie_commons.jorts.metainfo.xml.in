<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
    <id>io.github.ellie_commons.jorts</id>
    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0+</project_license>
    <name translatable="no">Jorts</name>
    <summary>Neither jeans nor shorts, just like jorts</summary>
    <description>
        <p>A colourful little sticky notes utility for your thoughts</p>
        <ul>
            <li>Ten good looking themes with soft transitions</li>
            <li>Striving to keep it cute, pretty, simple, modern, light</li>
            <li>Supports Undo, Redo (Ctrl+Z, Ctrl+Shift+Z)</li>
        </ul>
    </description>
    <provides>
        <binary>io.github.ellie_commons.jorts</binary>
    </provides>
    <developer translatable="no">Stella - Teamcons</developer>
    <url type="homepage">https://github.com/ellie_commons/jorts</url>
    <url type="bugtracker">https://github.com/ellie_commons/jorts/issues</url>
    <url type="translate">https://github.com/ellie_commons/jorts/blob/main/po/README.md</url>
    <launchable type="desktop-id">io.github.ellie_commons.jorts.desktop</launchable>
    <screenshots>
        <screenshot type="default">
            <image>https://raw.githubusercontent.com/ellie_commons/jorts/master/data/shot.png</image>
        </screenshot>
        <screenshot>
            <image>https://raw.githubusercontent.com/ellie_commons/jorts/master/data/shot2.png</image>
        </screenshot>
    </screenshots>
    <branding>
      <color type="primary" scheme_preference="light">#64baff</color>
      <color type="primary" scheme_preference="dark">#002e99</color>
    </branding>
    <content_rating type="oars-1.1"/>
    <recommends>
      <control>keyboard</control>
      <control>pointing</control>
      <control>touch</control>
    </recommends>
    <releases>
        <release version="2.0.0" date="2025-02-24">
            <description>
                <p>2.0.0 Release: Slate And Bubblegum</p>
                <ul>
                    <li>Revival of an ancient but well loved version of Notejot</li>
                    <li>The app is now named Jorts. You however cannot wear it</li>
                    <li>10 lovely little colours</li>
                    <li>Built atop of modern Linux technologies and packaging formats</li>
                    <li>Smooth transition when changing theme</li>
                    <li>New stickies have a random fun little title and colour</li>
                    <li>A few initial translations included, and more to come</li>
                    <li>Email and links are clickable! Ctrl+Click to open in mail or browser</li>
                    <li>Text supports undo, redo, and you can use emojis :)</li>
                </ul>
            </description>
        </release>
    </releases>
    <custom>
        <value key="x-appcenter-suggested-price">3</value>
    </custom>
</component>
